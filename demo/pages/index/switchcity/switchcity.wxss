.searchBar{
    height: 96rpx;
    background-color: #fff;
    display: flex;
    justify-content: center;
    align-items:center;
}
.searchBar image{
    width: 52rpx;
    height: 52rpx;
    padding: 6rpx;
    background-color: #f8f8f8;
    border: thin solid #f8f8f8;
    border-right: none;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}
.searchBar input{
    width: 80%;
    height: 64rpx;
    background-color: #f8f8f8;
    border: thin solid #f8f8f8;
    border-left: none;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}
.searchBarView{
    width: 100%;
    position: fixed;
    top:96rpx;
    left: 0;
    z-index: 2;
}
.searchLetter{
    position: fixed;
    top: 96rpx;
    right: 0;
    width: 40rpx;
    text-align: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    color: #666;
    z-index: 1
}
.searchLetter view{
    height: 70rpx;
}
.touchClass{
    background-color: rgba(0, 0, 0,0.5);
    color: #fff;
}
.showSlectedLetter{
    background-color: rgba(0, 0, 0,0.5);
    color: #fff;
    position: fixed;
    top:50%;
    left: 50%;
    margin: -100rpx;
    width: 200rpx;
    height: 200rpx;
    text-align:center;
    line-height:200rpx;
    overflow:hidden;
    border-radius:20rpx; 
    font-size: 64rpx;
    z-index: 1
}
.selection{
    display: flex;
    width: 100%;
    flex-direction: column;
}
.location_text{
    color: #aaa;
}
.hot_city{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    align-items:center;
    margin-right: 40rpx;
    background-color: #fff;
    border-bottom: 2rpx solid #f8f8f8
}
.item_hot_city{
    width: 20%;
    height: 64rpx;
    margin: 10rpx 2%;
    text-align:center;
    line-height:64rpx;
    overflow:hidden;
    border: thin solid #dddddd;
    border-radius: 10%;
    font-size: 28rpx;
}
.item_letter{
    display: flex;
    background-color: #f8f8f8;
    height: 60rpx;
    padding-left: 20rpx;
    align-items: center;
}
.item_city{
    display: flex;
    background-color: #fff;
    height: 80rpx;
    padding-left: 20rpx;
    align-items: center;
    border-bottom: 2rpx solid #f8f8f8
}